<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llInputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hydra_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/margin_5"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_35"
            android:text="tttttttttttttttt"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/text_size_large_26" />

        <LinearLayout
            android:id="@+id/llValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_57"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/margin_5"
                android:text="0"
                android:textColor="@color/dark_red2"
                android:textSize="@dimen/text_size_extra_large_54" />

            <TextView
                android:id="@+id/tvmesure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Kgs"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_57"
            android:gravity="center"
            android:visibility="gone">

            <EditText
                android:id="@+id/etWeight_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <EditText
                android:id="@+id/etWeight_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <EditText
                android:id="@+id/etWeight_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/hydra_deci_point" />

            <EditText
                android:id="@+id/etWeight_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Kgs"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_57"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/etHeigtOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <EditText
                android:id="@+id/etHeigtTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/hydra_deci_point" />
            <EditText
                android:id="@+id/etHeigtThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />
            <EditText
                android:id="@+id/etHeigtFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="meters"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_57"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_15"
                android:drawableTop="@drawable/hydra_unmale"
                android:text="@string/male"
                android:textColor="@color/light_gen_text"
                android:textSize="@dimen/text_size_very_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_35"
                android:layout_marginRight="@dimen/margin_35"
                android:src="@drawable/hydra_gender_div" />

            <TextView
                android:id="@+id/tvFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_15"
                android:drawableTop="@drawable/hydra_unfamle"
                android:text="@string/female"
                android:textColor="@color/light_gen_text"
                android:textSize="@dimen/text_size_very_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_57"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/etYearOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <EditText
                android:id="@+id/etYearTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@null"
                android:drawableBottom="@drawable/hydra_num"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/dark_red2"
                android:textColorHint="@color/light_hint"
                android:textSize="@dimen/text_size_extra_large_54" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Years"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_46"
            android:layout_marginTop="@dimen/margin_54"
            android:src="@drawable/hyra_gender" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hydration_setting_data_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_10"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llWeightValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivWeightIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/confirm_hydra_weight" />

                    <TextView
                        android:id="@+id/tvWeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_21"
                        android:text="@string/weight"
                        android:textColor="@color/hydra_balck"
                        android:textSize="@dimen/text_size_very_small_14" />

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_17"
                        android:text="0"
                        android:textColor="@color/dark_red2"
                        android:textSize="@dimen/text_size_large_26" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_30"
                    android:src="@drawable/confirm_hydra_div_hor" />
                <LinearLayout
                    android:id="@+id/llGenderValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/confirm_male" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_21"
                        android:text="@string/gender"
                        android:textColor="@color/hydra_balck"
                        android:textSize="@dimen/text_size_very_small_14" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_17"
                        android:text="0"
                        android:textColor="@color/dark_red2"
                        android:textSize="@dimen/text_size_large_26" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/confirm_hydra_div_ver" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llHeightValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivHeightIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/confirm_hydra_height" />

                    <TextView
                        android:id="@+id/tvHeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:text="@string/height"
                        android:textColor="@color/hydra_balck"
                        android:textSize="@dimen/text_size_very_small_14" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_17"
                        android:text="0"
                        android:textColor="@color/dark_red2"
                        android:textSize="@dimen/text_size_large_26" />

                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_30"
                    android:src="@drawable/confirm_hydra_div_hor" />
                <LinearLayout
                    android:id="@+id/llAgeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivAgeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/confirm_age" />

                    <TextView
                        android:id="@+id/tvAgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_21"
                        android:text="@string/age"
                        android:textColor="@color/hydra_balck"
                        android:textSize="@dimen/text_size_very_small_14" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_17"
                        android:text="0"
                        android:textColor="@color/dark_red2"
                        android:textSize="@dimen/text_size_large_26" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify me"
                android:textColor="@color/dark_red2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvOff"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_10"
                    android:text="Off"/>
                <TextView
                    android:id="@+id/tv1Hour"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_10"
                    android:text="1 Hour"/>
                <TextView
                    android:id="@+id/tv2Hours"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_10"
                    android:text="2 Hours"/>
                <TextView
                    android:id="@+id/tv4Hours"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingLeft="@dimen/margin_5"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_10"
                    android:text="4 Hours"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/divideline"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>