<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:textSize="@dimen/text_size_very_small"
        android:textColor="@color/gray_drak"/>
    <TextView
        android:id="@+id/tvSpecialIns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:textSize="@dimen/text_size_very_small"
        android:textColor="@color/gray_drak"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llOrdersDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="vertical"
            android:background="@drawable/order_devider">

            <TextView
                android:id="@+id/tvOrderDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detaills"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/text_size_very_small"
                android:textColor="@color/red"/>

            <ListView
                android:id="@+id/lvOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/order_devider"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdressDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_details"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/text_size_very_small"
                android:textColor="@color/red"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/address_icon"
                    android:paddingRight="@dimen/margin_2"
                    android:layout_margin="@dimen/margin_20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_very_small"
                        android:textColor="@color/gray_meduim"
                        android:text="N/A"/>
                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_8"
                        android:textSize="@dimen/text_size_very_small"
                        android:textColor="@color/gray_meduim"
                        android:text="N/A"
                        android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tvSubArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_8"
                        android:visibility="visible"
                        android:textSize="@dimen/text_size_very_small"
                        android:textColor="@color/gray_meduim"
                        android:text="N/A"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/btn"
        android:text="@string/Continue_Shopping"
        android:paddingBottom="@dimen/margin_3"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium" />
</LinearLayout>
