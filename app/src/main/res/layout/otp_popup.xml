<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_otp_bg">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_8"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:textColor="@color/otp_text_color"
                android:text="Enter OTP number !"
                android:textSize="@dimen/text_size_large_23" />

            <TextView
                android:id="@+id/tvmailinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/small_otp_color"
                android:gravity="center"
                android:text="We sent you a 4 digit OTP number to your mobile or Email id, it may take a few seconds to recieve."
                android:textSize="@dimen/text_size_small_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edOtpTextFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/edOtpTextSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/edOtpTextThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/edOtpTextFourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_15">

                <Button
                    android:id="@+id/btnResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reseng"
                    android:text="RESEND OTP"
                    android:gravity="center"
                    android:textColor="@color/otp_text_color"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_small_16" />

                <Button
                    android:id="@+id/btnVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/verify"
                    android:text="VERIFY"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small_16" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
