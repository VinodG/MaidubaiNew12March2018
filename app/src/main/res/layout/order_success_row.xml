<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_5"
    android:gravity="center">
    <ImageView
        android:id="@+id/ivBottolIcons"
        android:layout_width="@dimen/img_width_list"
        android:layout_height="@dimen/img_height_list"
        android:layout_margin="@dimen/margin_15" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvJarQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_very_small"
            android:text="1.5 litere"
            android:textColor="@color/black_drak"/>

        <TextView
            android:id="@+id/tvQuantityCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_very_small"
            android:layout_marginTop="@dimen/margin_5"
            android:text="quantity"
            android:textColor="@color/gray_drak"/>
        <TextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_very_small"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Unit Price"
            android:textColor="@color/gray_drak"/>
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_very_small"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Total Price"
            android:textColor="@color/red"/>


    </LinearLayout>
</LinearLayout>
