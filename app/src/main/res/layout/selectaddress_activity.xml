<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/bgcolor"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvAddressTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large"
            android:background="@color/light_gray"
            android:padding="@dimen/margin_10"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbg"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address_icon"
                android:layout_margin="@dimen/margin_20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_very_small"
                    android:textColor="@color/gray_meduim"
                    android:text="N/A"/>
                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_very_small"
                    android:textColor="@color/gray_meduim"
                    android:paddingTop="@dimen/margin_8"
                    android:text="N/A"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tvSubArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_very_small"
                    android:textColor="@color/gray_meduim"
                    android:paddingTop="@dimen/margin_8"
                    android:visibility="visible"
                    android:text="N/A"/>
                <TextView
                    android:id="@+id/tvStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_very_small"
                    android:textColor="@color/gray_meduim"
                    android:paddingTop="@dimen/margin_8"
                    android:visibility="gone"
                    android:text="street"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbg"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_15"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDevliveryNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_boy"
                android:textSize="@dimen/text_size_small_17"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_gravity="left"
                android:textColor="@color/gray_meduim"/>

            <EditText
                android:id="@+id/etAddNotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:hint="@string/note_hint"
                android:padding="@dimen/margin_5"
                android:background="@null"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_size_very_small"
                android:drawableBottom="@drawable/address_note"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbg"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_15"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_name"
                android:textSize="@dimen/text_size_small_17"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_gravity="left"
                android:textColor="@color/gray_meduim"/>

            <EditText
                android:id="@+id/etOrderName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:hint="@string/order_name_ex"
                android:padding="@dimen/margin_5"
                android:background="@null"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_size_very_small"
                android:drawableBottom="@drawable/address_note"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbg"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="@dimen/margin_15"
            android:gravity="center"
            android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="*"
                     android:textSize="@dimen/text_size_small_17"
                     android:layout_marginLeft="@dimen/margin_10"
                     android:layout_marginBottom="@dimen/margin_10"
                     android:layout_gravity="left"
                     android:textColor="@color/order_detail_red"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/enter_deliverty_date"
                     android:textSize="@dimen/text_size_small_17"
                     android:layout_marginLeft="@dimen/margin_10"
                     android:layout_marginBottom="@dimen/margin_10"
                     android:layout_gravity="left"
                     android:textColor="@color/gray_meduim"/>
             </LinearLayout>


            <TextView
                android:id="@+id/tvDeliveryDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:hint="@string/enter_deliverty_date"
                android:padding="@dimen/margin_5"
                android:background="@null"
                android:onClick="setDate"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_size_very_small"
                android:drawableRight="@drawable/arrow"
                android:drawableBottom="@drawable/address_note"/>
<!--
            <EditText
                android:id="@+id/etDeliveryDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:hint="@string/enter_deliverty_date"
                android:padding="@dimen/margin_5"
                android:background="@null"
                android:onClick="setDate"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_size_very_small"
                android:enabled="false"
                android:focusable="false"
                android:drawableRight="@drawable/arrow"
                android:drawableBottom="@drawable/address_note"/>
-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbg"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_15"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRecurr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recurr"
                android:textSize="@dimen/text_size_small_17"
                android:drawableLeft="@drawable/uncheck"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/gray_meduim"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/recur_info"
                    android:padding="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_5"
                    android:id="@+id/ivRecurrInfo" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRecurrType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:padding="@dimen/margin_5"
                android:background="@null"
                android:textSize="@dimen/text_size_very_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbg"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_15"
            android:gravity="center"
            android:orientation="vertical">]
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_type"
                android:textSize="@dimen/text_size_small_17"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_gravity="left"
                android:textColor="@color/gray_meduim"/>

            <RadioGroup
                android:id="@+id/rgPaymentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbCOD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/rbIsCode"/>
                <RadioButton
                    android:id="@+id/rbRossom"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/rbRossom"/>

            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/tvNotesTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notes"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large"
            android:background="@color/light_gray"
            android:padding="@dimen/margin_10"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivAddNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <EditText
                android:id="@+id/etAddNotesSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/note_bg"
                android:layout_margin="@dimen/margin_5"
                android:padding="@dimen/margin_5"
                android:hint="Enter note"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivSubNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/continue_a"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:paddingBottom="@dimen/margin_3"
            android:background="@drawable/btn"/>
    </LinearLayout>
</ScrollView>