<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_register"
    android:layoutDirection="rtl"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/margin_10"
            android:text="@string/enter_your_basics_details"
            android:textSize="@dimen/text_size_normal_19"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bgtextfields"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_5"
                android:paddingStart="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/name_signup"
                    android:drawableStart="@drawable/name_signup"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="right"
                    android:drawablePadding="@dimen/margin_10"
                    android:ems="10"
                    android:hint="@string/name" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emaiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_5"
                android:paddingStart="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/email_signup"
                    android:drawableStart="@drawable/email_signup"
                    android:drawablePadding="@dimen/margin_10"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="right"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="@string/email_address" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_8">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/pass_signup"
                        android:drawableStart="@drawable/pass_signup"
                        android:drawablePadding="@dimen/margin_10"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="@string/password"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_small"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/ivPreviewPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|end"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_10"
                    android:src="@drawable/preview"

                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seprator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/confirmpasslayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_8"
                    android:paddingTop="@dimen/margin_8">

                    <EditText
                        android:id="@+id/etConfirmPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/pass_signup"
                        android:drawableStart="@drawable/pass_signup"
                        android:drawablePadding="@dimen/margin_10"
                        android:textSize="@dimen/text_size_small"
                        android:ems="10"
                        android:gravity="right"
                        android:singleLine="true"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword" />


                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/ivPreviewPassConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|end"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_10"
                    android:src="@drawable/preview"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/singleinput_new"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10">

            <LinearLayout
                android:id="@+id/llBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bdayLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_8"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_5">

                    <EditText
                        android:id="@+id/etBday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/bday_icon"
                        android:drawableStart="@drawable/bday_icon"
                        android:drawablePadding="@dimen/margin_10"
                        android:focusable="false"
                        android:hint="@string/birthday"
                        android:gravity="right"
                        android:inputType="date"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_small" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/ivCalBday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:src="@drawable/down_selector" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/seprator"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/anniversary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_8"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_8">

                    <EditText
                        android:id="@+id/etAnniversary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/calender_icon"
                        android:drawableStart="@drawable/calender_icon"
                        android:drawablePadding="@dimen/margin_5"
                        android:focusable="false"
                        android:gravity="right"
                        android:hint="@string/anniversary"
                        android:inputType="date"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_small" />

                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/ivCalAnivers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|end"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:src="@drawable/cal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:textSize="@dimen/text_size_very_small"
                android:text="@string/or_sign_up_with"
                android:textColor="@color/white" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLoginWithFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:src="@drawable/loginfb" />
            <ImageView
                android:id="@+id/ivLoginWithTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:src="@drawable/logintwitter"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/ivLoginWithGooglePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:src="@drawable/logingp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/button"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:paddingBottom="@dimen/margin_3"/>
    </LinearLayout>
</ScrollView>
