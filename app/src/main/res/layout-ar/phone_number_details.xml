<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/bg_register"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_5"
        android:paddingTop="@dimen/margin_15"
        android:text="@string/enter_your_phone_number"
        android:textSize="@dimen/text_size_normal_19"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/enterphonebg"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_8"
            android:paddingTop="@dimen/margin_8">

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/mobilenum"
                android:drawableLeft="@drawable/mobilenum"
                android:drawablePadding="@dimen/margin_5"
                android:textSize="@dimen/text_size_small"
                android:singleLine="true"
                android:gravity="right"
                android:inputType="phone"
                android:hint="@string/mobile_number"
                android:maxLength="15"/>

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seprator" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/landline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_8"
            android:paddingTop="@dimen/margin_8">

            <EditText
                android:id="@+id/etLandline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/landnumber"
                android:drawableLeft="@drawable/landnumber"
                android:drawablePadding="@dimen/margin_5"
                android:textSize="@dimen/text_size_small"
                android:singleLine="true"
                android:gravity="right"
                android:inputType="phone"
                android:hint="@string/landline_number" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* OTP will be sent to the entered mobile number"
        android:textSize="@dimen/text_size_very_small"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:visibility="gone"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/button"
        android:text="@string/proceed"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_medium"
        android:paddingBottom="@dimen/margin_3"/>


</LinearLayout>
