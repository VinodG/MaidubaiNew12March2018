<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/bg_register"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvtitile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_5"
        android:paddingTop="@dimen/margin_15"
        android:text="@string/enter_registered_mob_no_or_email"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_19" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/singleinput_new"
        android:padding="@dimen/margin_10">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5">

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/mobilenum"
                android:drawableLeft="@drawable/mobilenum"
                android:drawablePadding="@dimen/margin_5"
                android:ems="10"
                android:gravity="right"
                android:textDirection="rtl"
                android:hint="@string/mobile_num"
                android:inputType="phone"
                android:textSize="@dimen/text_size_very_small_14" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:text="@string/or"
            android:textSize="@dimen/text_size_very_small"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/singleinput_new"
        android:padding="@dimen/margin_10">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emaillay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/email_signup"
                android:drawableLeft="@drawable/email_signup"
                android:drawablePadding="@dimen/margin_5"
                android:ems="10"
                android:gravity="right"
                android:hint="@string/emailId"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_very_small_14" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:text="@string/otp_sent_email"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_very_small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/red"
        android:text="@string/next"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>
